generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id                 Int      @id @default(autoincrement())
  firstName          String
  email              String   @unique
  password           String
  lastName           String?
  termsAndConditions Boolean?
  mobileNo           String?
  isVerified         Boolean?
  updatedAt          DateTime @updatedAt
  createdAt          DateTime @default(now())
}

model Owner {
  id                 Int      @id @default(autoincrement())
  firstName          String
  email              String   @unique
  password           String
  lastName           String?
  termsAndConditions Boolean?
  mobileNo           String?
  isverified         Boolean?
  isOwner            Boolean?
  updatedAt          DateTime @updatedAt
  createdAt          DateTime @default(now())
}
